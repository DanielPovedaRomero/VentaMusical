@model VentaMusical.Models.ViewModels.VistaCancionesViewModel
@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    <table id="cancionesTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Código Canción</th>
                <th>Código Género</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cancion in Model.Canciones)
            {
                <tr>
                    <td>@cancion.CodigoCancion</td>
                    <td>@cancion.CodigoGenero</td>
                    <td>@cancion.Nombre</td>
                    <td>@cancion.Precio</td>
                    <td><img src="@cancion.Imagen" alt="Imagen @cancion.Nombre" style="width: 50px; height: 50px;"></td>
                    <td>
                        <button class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></button>
                        <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>